@model Onnorokom.ShoppingCart.Web.Areas.Admin.Models.Purchases.CreatePurchaseModel
@{
    ViewData["Title"] = "Create Purchase";
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Add A New Purchase</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Purchase"
                          asp-action="CreatePurchase" asp-antiforgery="true">
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="SellerName" class="col-sm-2 col-form-label">Seller Name</label>
                                <div></div>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="SellerName" id="name"
                                           placeholder="Seller Name" required>
                                    <span asp-validation-for="SellerName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ProductName" class="col-sm-2 col-form-label">Product Name</label>
                                <div></div>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="ProductName" id="productname"
                                           placeholder="Product Name" required>
                                    <span asp-validation-for="ProductName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Price" class="col-sm-2 col-form-label">
                                    Price
                                </label>
                                <div></div>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="Price" id="price"
                                           placeholder="Product Price" required>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="PurchaseDate" class="col-sm-2 col-form-label">
                                    Purchase Date
                                </label>
                                <div></div>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" asp-for="PurchaseDate" id="purchasedate"
                                           placeholder="Purchase Date" required>
                                    <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Quantity" class="col-sm-2 col-form-label">
                                    Quantity
                                </label>
                                <div></div>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control" asp-for="Quantity" id="Quantity"
                                           placeholder="Quantity" required>
                                    <span asp-validation-for="Quantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Add</button>
                            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="btn btn-default float-right">Cancel</a>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

